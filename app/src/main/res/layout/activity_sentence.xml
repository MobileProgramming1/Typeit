<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sentenceback"
    tools:context="com.example.hsnoh.typeit.sentence">
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/letterpermin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:id="@+id/sentence"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="hiiiiiiiiillllll"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_below="@+id/sentence"
        android:layout_alignStart="@+id/input" />

    <EditText
        android:id="@+id/input"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/sentence"
        android:layout_alignStart="@+id/sentence" />
    <TextView
        android:id="@+id/accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:text="Accuracy : 0"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/typingrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/accuracy"
        android:text="Typing Rate : 0"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:textSize="25sp" />

</RelativeLayout>
